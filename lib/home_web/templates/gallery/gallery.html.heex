<%= if @page do %>
	<article>
		<%= @page.content |> raw %>
	</article>
<% end %>
<%= for {name, images} <- @gallery do %>
	<%= if name do %>
		<h2><%= name %></h2>
	<% end %>
	<div class="container d-flex flex-wrap">
		<%= for image <- images do %>
			<div class="async-image" data-src={[@directory, image] |> Path.join}></div>
		<% end %>
	</div>
<% end %>
