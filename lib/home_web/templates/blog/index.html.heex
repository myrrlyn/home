<article>
	<section>
		<%= @page.content |> raw %>
	</section>
	<section>
		<ol>
			<%= for {name, slug, count, desc} <- @groups do %>
				<li value={count}>
					<%= link name, to: "/blog/" <> slug %>
					<%= if desc do %>
						<br />
						<%= desc |> Earmark.as_html! |> raw %>
					<% end %>
				</li>
			<% end %>
		</ol>
	</section>
</article>
