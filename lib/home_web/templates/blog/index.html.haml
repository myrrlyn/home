%article
	%section
		= @page.content |> raw
	%section
		- for {name, ident, group} <- HomeWeb.BlogController.grouped_by_category() do
			%h2{id="#{ident}"}= name
			%ol{reversed: ""}
				- for {url, meta} <- group do
					%li
						%a{href: "#{url}"}= meta.title
						= "(#{Timex.format!(meta.date, "{ISOdate}")})"
						%br
						= meta.summary |> Earmark.as_html! |> raw
