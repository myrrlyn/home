<article>
	<.page_title page_title={@name} />
	<p>
		The <code><%= @slug %></code> category does not have an index file. An
		autogenerated page listing is provided:
	</p>
	<ol reversed>
		<li :for={{url, meta} <- @pages}>
			<.link href={url} class="title"><%= meta.title %></.link>
			(<.timestamp time={meta.date} />)
			<br />
			<%= meta.summary |> Earmark.as_html! |> raw %>
		</li>
	</ol>
</article>
